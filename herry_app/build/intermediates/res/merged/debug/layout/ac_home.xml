<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 首页 -->

    <FrameLayout
        android:id="@+id/ac_home_fl_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/ac_home_bottom_bg_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ac_home_ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/ac_home_iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/al_" />


            <TextView
                android:id="@+id/ac_home_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_bottom_margin"
                android:paddingTop="@dimen/home_bottom_padding"
                android:text="@string/app_bottom_msg"
                android:textColor="@color/appcolorBackground"
                android:textSize="@dimen/home_bottom_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ac_home_ll_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ac_home_iv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@mipmap/al9" />

            <TextView
                android:id="@+id/ac_home_tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_bottom_margin"
                android:paddingTop="@dimen/home_bottom_padding"
                android:text="@string/app_bottom_friends"
                android:textColor="@color/gray"
                android:textSize="@dimen/home_bottom_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ac_home_ll_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ac_home_iv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/alc" />

            <TextView
                android:id="@+id/ac_home_tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_bottom_margin"
                android:paddingTop="@dimen/home_bottom_padding"
                android:text="@string/app_bottom_circle"
                android:textColor="@color/gray"
                android:textSize="@dimen/home_bottom_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ac_home_ll_service2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ac_home_iv_service2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/ale" />

            <TextView
                android:id="@+id/ac_home_tv_service2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_bottom_margin"
                android:paddingTop="@dimen/home_bottom_padding"
                android:text="@string/app_bottom_me"

                android:textColor="@color/gray"
                android:textSize="@dimen/home_bottom_font_size" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>